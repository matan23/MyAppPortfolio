<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/home_relative_layout"
    android:background="#174085">

    <TextView android:text="@string/home_screen_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textColor="#ffffff"
        style="@style/TextAppearance.AppCompat.Title"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/spotify_btn"
        android:background="#C98811"
        android:textStyle="bold"
        android:textColor="@color/primary_material_light"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="SCORES APP"
        android:id="@+id/scores_btn"
        android:background="#C98811"
        android:textStyle="bold"
        android:textColor="@color/primary_material_light"
        android:layout_below="@+id/spotify_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="LIBRARY APP"
        android:id="@+id/library_btn"
        android:background="#C98811"
        android:textStyle="bold"
        android:textColor="@color/primary_material_light"
        android:layout_below="@+id/scores_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="BUILD IT BIGGER"
        android:id="@+id/builditbigger_btn"
        android:background="#C98811"
        android:textStyle="bold"
        android:textColor="@color/primary_material_light"
        android:layout_below="@+id/library_btn"
        android:layout_alignLeft="@+id/library_btn"
        android:layout_alignStart="@+id/library_btn"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="XYZ READER"
        android:id="@+id/reader_btn"
        android:background="#C98811"
        android:textStyle="bold"
        android:textColor="@color/primary_material_light"
        android:layout_below="@+id/builditbigger_btn"
        android:layout_alignLeft="@+id/builditbigger_btn"
        android:layout_alignStart="@+id/builditbigger_btn"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/capstone_btn"
        android:background="#C95D11"
        android:textStyle="bold"
        android:textColor="@color/primary_material_light"
        android:layout_below="@+id/reader_btn"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
